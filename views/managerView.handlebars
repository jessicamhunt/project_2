<div class="container text-center">
    <div class="row">
        <div class="col">
            <h3>What would you like to do?</h3>
        </div>
    </div>
    <!-- Buttons for Manager Options -->
    <div class="row" id="btnBox">


        <div class="col-md-4">
            <button id="createJob" type="button" class="btn">Create Job</button>
        </div>

        <div class="col-md-4">
            <button id="addJobsite" type="button" class="btn">Create Jobsite</button>
        </div>

        <div class="col-md-4">
            <button id="addSuper" type="button" class="btn">Create Supervisor</button>
        </div>


        <div class="col-md-3">
            <button id="viewJobs" type="button" class="btn">View Jobs</button>
        </div>

        <div class="col-md-3">
            <button id="viewJobsites" type="button" class="btn">View Jobsites</button>
        </div>

        <div class="col-md-3">
            <button id="viewSuper" type="button" class="btn">View Supervisors</button>
        </div>

        <div class="col-md-3">
            <button id="viewCustomer" type="button" class="btn">View Customers</button>
        </div>


        <div class="col-md-4">
            <button id="searchJobs" type="button" class="btn">Search Jobs</button>
        </div>

        <div class="col-md-4">
            <button id="searchSites" type="button" class="btn">Search Jobsites</button>
        </div>

        <div class="col-md-4">
