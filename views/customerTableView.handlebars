<link rel="stylesheet" href="/styles/table.css">
<div class="container text-center">
    <div class="row text-center">
        <div class="col">

            <button id="managerBtn" type="button" class="btn btn-primary">Return</button>
        </div>
        {{!-- <div class="col">
                <button id="foremanBtn" type="button" class="btn">Foreman</button>
            </div> --}}
    </div>
    <!-- Table to Display All Job Info -->
    <div class="row">
        <div class="col" id="tableBody">
            <div class="table" id="jobSiteTable1">
                <h1>All Customers</h1>
                <table class="table table-responsive" id="jobSiteTable2">
                    <thead>
                        <tr>
                            <th>Customer ID</th>
                            <th>Customer's Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Address</th>
                            <th>Jobsite Acreage</th>
                            <th>Job Description</th>
                            <th>Price Range</th>
                            <th>Job Created</th>
                            <th>Last Updated</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each customers}}
                        <tr>
                            <td>{{id}}</td>
                            <td>{{customer_name}}</td>
                            <td>{{customer_email}}</td>
                            <td>{{customer_phone}}</td>
                            <td>{{customer_address}}</td>
                            <td>{{acreage}}</td>
                            <td>{{customer_description}}</td>
                            <td>{{pricerange}}</td>
                            <td>{{createdAt}}</td>
                            <td>{{updatedAt}}</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>