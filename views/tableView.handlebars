<link rel="stylesheet" href="/styles/table.css">
<div class="container text-center">
    <div class="row text-center">
        <div class="col">

            <button id="managerBtn" type="button" class="btn">Return</button>
        </div>
        {{!-- <div class="col">
                <button id="foremanBtn" type="button" class="btn">Foreman</button>
            </div> --}}
    </div>
    <!-- Table to Display All Job Info -->
    <div class="row" id="tableBody">
        <div class="col">
            <div class="table">
                <h1>All Listed Jobs</h1>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Job ID</th>
                            <th>Supervisor</th>
                            <th>Job Site</th>
                            <th>Project Bid</th>
                            <th>Project Name</th>
                            <th>Hours</th>
                            <th>Workers</th>
                            <th>Wages Paid</th>
                            <th>Material Costs</th>
                            <th>Job Profits</th>
                            <th>Job Comments</th>
                            <th>Job Created</th>
                            <th>Last Updated</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each projects}}
                        <tr>
                            <td>{{id}}</td>
                            <td>{{supervisor_id}}</td>
                            <td>{{jobsite_id}}</td>
                            <td>${{project_bid}}</td>
                            <td>{{project_name}}</td>
                            <td>{{hours}}</td>
                            <td>{{workers}}</td>
                            <td>${{wagecosts}}</td>
                            <td>${{materialcosts}}</td>
                            <td>${{profit}}</td>
                            <td>{{jobcomments}}</td>
                            <td>{{createdAt}}</td>
                            <td>{{updatedAt}}</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>